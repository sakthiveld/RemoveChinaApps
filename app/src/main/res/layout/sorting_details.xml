<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="@dimen/_10sdp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp">

        <RelativeLayout
            android:id="@+id/first_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/card_image"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:background="@mipmap/ic_launcher_round"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/second_lay"
            android:layout_below="@+id/first_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/atoz_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/atoz_white" />

            <TextView
                android:id="@+id/atoz_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_toLeftOf="@+id/atoz_checkbox"
                android:layout_toRightOf="@+id/atoz_image"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/atoz"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/atoz_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:buttonTint="@color/white"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/third_lay"
            android:layout_below="@+id/second_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/ztoa_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/atoz_white" />

            <TextView
                android:id="@+id/ztoa_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_toLeftOf="@+id/ztoa_checkbox"
                android:layout_toRightOf="@+id/ztoa_image"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/ztoa"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/ztoa_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:buttonTint="@color/white"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>